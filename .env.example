# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=neondb_owner
DB_PASS=your_password
DB_NAME=rent_home

# VNPay Configuration
VNP_TMN_CODE=your_vnpay_tmn_code
VNP_HASH_SECRET=your_vnpay_hash_secret
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNP_RETURN_URL=http://localhost:3000/payment/vnpay/return
VNP_IPN_URL=http://localhost:3000/payment/vnpay/ipn

# SmartCA Configuration (VNPT Digital Signature Service)
# Get these values from VNPT after registering your service
SMARTCA_SP_ID=your_service_provider_id_from_vnpt
SMARTCA_SP_PASSWORD=your_service_provider_password_from_vnpt# SmartCA Environment Settings
SMARTCA_ENVIRONMENT=uat
# Use 'uat' for testing: https://rmgateway.vnptit.vn/sca/sp769/v1
# Use 'production' for production: https://gwsca.vnpt.vn/sca/sp769/v1
SMARTCA_BASE_URL=https://gwsca.vnpt.vn/sca/sp769/v1
SMARTCA_UAT_BASE_URL=https://rmgateway.vnptit.vn/sca/sp769/v1

# SmartCA Timeout and Polling Settings
SMARTCA_TIMEOUT=30000
SMARTCA_MAX_POLL_ATTEMPTS=24
SMARTCA_POLL_INTERVAL_MS=10000

# Application Settings
NODE_ENV=development
PORT=3000
